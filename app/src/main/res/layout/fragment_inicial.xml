    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
    tools:context="ar.com.thinco.fandog.InicialFragment"
        android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/nombreVendedor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="8pt"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/turno"
            android:layout_weight="1"/>

        <Spinner
            android:id="@+id/spinnerTurno"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/local"
            android:layout_weight="1"/>

        <Spinner
            android:id="@+id/spinnerLocal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/inicial_de_salchichas"
        />

    <EditText
        android:id="@+id/iniSalchichas"
        android:layout_width="match_parent"
        android:maxLines="1"
        android:maxLength="4"
        android:inputType="number"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/inicial_de_panes"/>

    <EditText
        android:id="@+id/iniPanes"
        android:layout_width="match_parent"
        android:maxLines="1"
        android:maxLength="4"
        android:inputType="number"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/inicial_de_gaseosas"/>

    <EditText
        android:id="@+id/iniGaseosas"
        android:layout_width="match_parent"
        android:maxLines="1"
        android:maxLength="4"
        android:inputType="number"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/efectivo_en_caja"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:textSize="7pt"/>
            <EditText
                android:id="@+id/efectivo_en_caja"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:maxLength="8"
                android:inputType="numberDecimal"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/precio_de_las_salchichas"
            />

        <EditText
            android:id="@+id/precioSalchichas"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:maxLength="4"
            android:inputType="number"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/precio_de_las_gaseosas_de_vidrio"
            />

        <EditText
            android:id="@+id/precioGaseosas"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:maxLength="4"
            android:inputType="number"
            android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnGuardarIni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/guardar"/>
    </LinearLayout>
    </ScrollView>
